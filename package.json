{
  "name": "todo-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "node scripts/validate-env.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "tauri": "tauri",
    "validate-env": "node scripts/validate-env.js",
    "check-secrets": "node scripts/validate-env.js --check-git",
    "prepare": "husky",
    "db:status": "node scripts/validate-env.js && echo '✅ Database configuration verified'",
    "db:docs": "open supabase/README.md || xdg-open supabase/README.md || echo 'Please open supabase/README.md manually'",
    "db:migrations": "ls -la supabase/migrations/ || echo 'No migrations directory found'",
    "security:check": "npm run check-secrets && npm run validate-env && npm run audit:all && echo '✅ All security checks passed'",
    "build:check": "npm run build && node scripts/check-build.js",
    "build:analyze": "npm run build && npx vite-bundle-visualizer",
    "test:errors": "echo 'Error handling tests not yet implemented'",
    "audit:npm": "npm audit --audit-level=high",
    "audit:npm:prod": "npm audit --audit-level=high --omit=dev",
    "audit:npm:json": "npm audit --audit-level=high --json | tee npm-audit.json",
    "audit:npm:prod:json": "npm audit --audit-level=high --omit=dev --json | tee npm-audit.json",
    "audit:cargo": "cd src-tauri && cargo audit",
    "audit:cargo:json": "cd src-tauri && cargo audit --json | tee ../cargo-audit.json",
    "audit:all": "npm run audit:npm && npm run audit:cargo",
    "audit:fix": "npm audit fix",
    "audit:report": "node scripts/audit-deps.cjs",
    "deps:outdated": "npm outdated && cd src-tauri && cargo outdated",
    "deps:update": "npm update && cd src-tauri && cargo update"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-deep-link": "^2.4.5",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tauri-apps/cli": "^2.9.4",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.0.11",
    "terser": "^5.44.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2"
  }
}
